<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="widget" parent="AppTheme">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="table_element" parent="widget">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/table_element</item>
    </style>

    <style name="table_element_dark" parent="table_element">
        <item name="android:background">@color/table_element_dark</item>
    </style>

    <style name="header" parent="table_element">
        <item name="android:background">@color/table_header</item>
    </style>

    <style name="header_dark" parent="header">
        <item name="android:background">@color/table_header_dark</item>
    </style>
</resources>